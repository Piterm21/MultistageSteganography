<Window x:Class="MultistageSteganography.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultistageSteganography"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="OpenImage" />
                <MenuItem Header="Save" Click="SaveImage"/>
            </MenuItem>
            <MenuItem Header="Steganography">
                <MenuItem Header="Encode LSB" Click="EncodeLSB"></MenuItem>
                <MenuItem Header="Decode LSB" Click="DecodeLSB"></MenuItem>
                <MenuItem Header="Encode MSB" Click="OpenImage"></MenuItem>
                <MenuItem Header="Decode MSB" Click="OpenImage"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Stretch="Uniform" Name="SourceImage"></Image>
            <Image Grid.Column="1" Stretch="Uniform" Name="ResultImage"></Image>
        </Grid>
    </StackPanel>
</Window>
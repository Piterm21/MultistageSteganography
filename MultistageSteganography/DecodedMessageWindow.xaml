<Window x:Class="MultistageSteganography.DecodedMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decoded message" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        MaxHeight="720"
        MaxWidth="1280">
    <ScrollViewer>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Name="DecodedMessage" Grid.Row="0"></TextBlock>
            <WrapPanel Grid.Row="1" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button IsDefault="True" Click="buttonOk" MinWidth="60" Margin="0,0,10,0">Ok</Button>
            </WrapPanel>
        </Grid>
    </ScrollViewer>
</Window>